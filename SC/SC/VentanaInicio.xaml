<Window x:Class="SC.VentanaInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC"
        mc:Ignorable="d"
        Title="VentanaInicio" Height="450" Width="730">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Canvas>
            <StackPanel>
                <WrapPanel Width="720" Background="#FFDDDDDD">
                    <Button Height="60" Content="Back" Click="Button_Click" Width="120" HorizontalAlignment="Left" Foreground="White" Background="#FF282FB4"/>
                    <Button Height="60" Margin="120,0" Content="Folders" Click="Button_Click" Width="240" HorizontalAlignment="Left"/>
                    <Button Height="60" Content="Configuration" Click="Button_Click" Width="120" HorizontalAlignment="Left"/>
                </WrapPanel>
            </StackPanel>
            <StackPanel Panel.ZIndex="2">
                <WrapPanel Width="60" Margin="0,140">
                    <Button Content="NF" Height="50" Width="50"/>
                    <Button Content="UF/F" Height="50" Width="50"/>
                    <Button Content="Edit" Height="50" Width="50"/>
                </WrapPanel>
            </StackPanel>
            <StackPanel Margin="0,60,0,0" Width="715">
                <ScrollViewer Height="358" >
                    <WrapPanel HorizontalAlignment="Center" Width="600" Height="358">
                        <Image Source="Sources/Premiere.jpeg"  HorizontalAlignment="Center" Width="176" Margin="12,5"/>
                        <Image Source="Sources/Premiere.jpeg"  HorizontalAlignment="Center" Width="176" Margin="12,5"/>
                        <Image Source="Sources/Premiere.jpeg"  HorizontalAlignment="Center" Width="176" Margin="12,5"/>
                    </WrapPanel>
                </ScrollViewer>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
